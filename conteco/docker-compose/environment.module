#!/usr/bin/env bash

# START CONFIGURATION
export CONTECO_DC_GLOBAL_STACKS=''filebeat.base''
# END CONFIGURATION

# START OTHER VARIABLES
export CONTECO_DC_FILEBEAT_ENVIRONMENT_FILEPATHS="'/hostfs/var/log/*.log','/hostfs/var/log/*/*.log'"
# END OTHER VARIABLES

# START VOLUMES VARIABLES
export CONTECO_DC_FILEBEAT_VOLUMES="'/var/log:/hostfs/var/log:ro','/etc:/hostfs/etc:ro'"
export CONTECO_DC_GLOBAL_VOLUMES=""
# END VOLUMES VARIABLES

# START PORTS VARIABLES
# END PORTS VARIABLES

# START NETWORKS VARIABLES
export CONTECO_DC_FILEBEAT_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_ECOSYSTEM}_overlay: { external: true }"
# END NETWORKS VARIABLES

# START DEPLOY VARIABLES
export CONTECO_DC_FILEBEAT_DEPLOY_MODE="replicated"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_LIMITS_CPUS="0.25"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END DEPLOY VARIABLES


