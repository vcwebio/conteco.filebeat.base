#!/usr/bin/env bash

# START CONFIGURATION
export CONTECO_DC_GLOBAL_STACKS=''filebeat.base''
# END CONFIGURATION

# START OTHER VARIABLES
export CONTECO_DC_FILEBEAT_ENVIRONMENT_FILEPATHS="/hostfs/var/lib/docker/containers/*/*.json"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONSOLE="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_ELASTICSEARCH="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA="true"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_ELASTICSEARCH_HOSTS="elasticsearch2:9200"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KIBANA_HOST="kibana2:5601"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KIBANA_DASHBOARDS="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA_HOSTS="kafka:90922"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA_TOPIC="test"
# END OTHER VARIABLES

# START VOLUMES VARIABLES
export CONTECO_DC_FILEBEAT_VOLUMES="'/var/lib/docker/containers:/hostfs/var/lib/docker/containers:rw','/etc:/hostfs/etc:ro'"
