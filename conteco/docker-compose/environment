#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='filebeat.base'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_FILEBEAT_ENVIRONMENT,$CONTECO_DC_FILEBEAT_COMMAND,$CONTECO_DC_FILEBEAT_PORTS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_FILEBEAT_ENVIRONMENT=
export CONTECO_DC_FILEBEAT_COMMAND=
export CONTECO_DC_FILEBEAT_PORTS=
# END GLOBAL SETTINGS

# START SETTINGS filebeat.base
export CONTECO_DC_FILEBEAT_VOLUMES="'${DOLLAR}{CONTECO_DC_FILEBEAT_VOLUMES_NAME}:/usr/share/filebeat/data'"
export CONTECO_DC_FILEBEAT_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_FILEBEAT_VOLUMES_NAME="${CONTECO_ECOSYSTEM}_elasticsearch_volume"
export CONTECO_DC_FILEBEAT_DEPLOY_MODE="replicated"
export CONTECO_DC_FILEBEAT_DEPLOY_REPLICAS="1"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_LIMITS_CPUS="0.25"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS filebeat.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_DC_FILEBEAT_VOLUMES_NAME}: {}"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_FILEBEAT_NETWORKS}: { external: true }"
# END TOPLEVEL SETTINGS
