#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='filebeat.base'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_FILEBEAT_ENVIRONMENT,$CONTECO_DC_FILEBEAT_COMMAND,$CONTECO_DC_FILEBEAT_PORTS,$CONTECO_DC_FILEBEAT_NETWORKS,$CONTECO_DC_FILEBEAT_DEPLOY_LABELS,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_FILEBEAT_ENVIRONMENT="'CONTECO_DC_FILEBEAT_FILEPATHS=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_FILEPATHS}','ES_FILEBEAT_OUTPUT_CONSOLE=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONSOLE}','ES_FILEBEAT_OUTPUT_ELASTICSEARCH=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_ELASTICSEARCH}','ES_FILEBEAT_OUTPUT_KAFKA=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA}','ES_FILEBEAT_OUTPUT_ELASTICSEARCH_HOSTS=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_ELASTICSEARCH_HOSTS}','ES_FILEBEAT_OUTPUT_KIBANA_HOST=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KIBANA_HOST}','ES_FILEBEAT_OUTPUT_KIBANA_DASHBOARDS=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KIBANA_DASHBOARDS}','ES_FILEBEAT_OUTPUT_KAFKA_HOSTS=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA_HOSTS}','ES_FILEBEAT_OUTPUT_KAFKA_TOPIC=${DOLLAR}{CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA_TOPIC}'"
export CONTECO_DC_FILEBEAT_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS filebeat.base
export CONTECO_DC_FILEBEAT_ENVIRONMENT_FILEPATHS="/hostfs/var/lib/docker/containers/*/*.json"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_CONSOLE="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_ELASTICSEARCH="true"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_ELASTICSEARCH_HOSTS="elasticsearch:9200"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KIBANA_HOST="kibana:5601"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KIBANA_DASHBOARDS="false"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA_HOSTS="kafka:9092"
export CONTECO_DC_FILEBEAT_ENVIRONMENT_OUTPUT_KAFKA_TOPIC="test"
export CONTECO_DC_FILEBEAT_VOLUMES="'/var/lib/docker/containers:/hostfs/var/lib/docker/containers:rw','/etc:/hostfs/etc:ro'"
export CONTECO_DC_FILEBEAT_DEPLOY_MODE="replicated"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_LIMITS_CPUS="0.25"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS filebeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
